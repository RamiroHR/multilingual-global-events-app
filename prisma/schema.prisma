generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int        @id @default(autoincrement())
  email      String     @unique
  username   String     @unique
  password   Password?  // relation field only (required as 'optional' this table is pointed by the Password, not the other way around)
  }

model Password {
  id         Int        @id @default(autoincrement())
  password   String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt()
  userId     Int        @unique       // Foreign key, unique to enforce 1:1 relation
  user       User       @relation(fields: [userId], references: [id])   // relation pointing to User table
}